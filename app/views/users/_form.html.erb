    <%= form.label :nome, :class => "col-sm-2 col-form-label" %>
    <%= form.text_field :nome %>
  </div>

  <div class="form-group row">
    <%= form.label :matricula, :class => "col-sm-2 col-form-label" %>
    <%= form.text_field :matricula %>
  </div>

  <div class="actions">
    <%= form.submit  "Cadastrar",:class => "btn btn-success" %>
  </div>
<% end %>
