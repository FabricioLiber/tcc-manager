<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Estudantes</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Matricula</th>
        <th>Apto</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= render @students %>
    </tbody>
  </table>
  <div class="row justify-content-center">
    <%= paginate @students %>
  </div>
  <br>

  <%= link_to 'Novo', new_student_path , :class => "btn btn-info"%>
</div>
