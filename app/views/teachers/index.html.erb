<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Professores</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Matricula</th>
        <th>Especialidade</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= render @teachers %>
    </tbody>
  </table>

  <br>
  <div class="row justify-content-center">
    <%= paginate @teachers %>
  </div>

  <%= link_to 'Novo', new_teacher_path , :class => "btn btn-info"%>
</div>