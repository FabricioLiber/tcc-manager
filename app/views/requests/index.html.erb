<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Requesições</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Tipo</th>
        <th>Status</th>
        <th>Nota</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= render @requests %>
    </tbody>
  </table>
  <div class="row justify-content-center">
    <%= paginate @requests %>
  </div>
  <br>

  <%= link_to 'Nova', new_request_path , :class => "btn btn-info" %>
</div>